<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_backdrop_high"
    tools:context=".activities.OneGameActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/timer"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="time"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Timer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:shadowColor="@color/lightRed"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40.0"
        app:layout_constraintBottom_toTopOf="@+id/game_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/whites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="33dp"
        android:accessibilityHeading="false"
        android:shadowColor="@color/lightBlue"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40.0"
        android:text="whites"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/username1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="17dp"
        android:text="GameType"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@color/lightOrange"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40.0"
        app:layout_constraintBottom_toTopOf="@+id/username1"
        app:layout_constraintStart_toStartOf="@+id/timer" />

    <TextView
        android:id="@+id/blacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="37dp"
        android:text="blacks"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@color/lightBlue"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="User1"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@color/lightGreen"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40.0"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/game_type"
        app:layout_constraintStart_toStartOf="@+id/whites" />

    <TextView
        android:id="@+id/username2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:text="User2"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@color/lightRed"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40.0"
        app:layout_constraintEnd_toEndOf="@+id/blacks"
        app:layout_constraintStart_toEndOf="@+id/game_type"
        app:layout_constraintTop_toBottomOf="@+id/blacks" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username2">

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="60sp"
            android:horizontalSpacing="0dp"
            android:numColumns="8"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp"
            android:visibility="visible">

        </GridView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_surrender"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="I surrender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>